<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogging-Application</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImage %>" alt="" class="mt-3" height="400px">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4 d-flex mb-4" style="align-items: end;gap: 10px;" >
        <img src="<%= blog.createdBy.profileImageURL %>" alt="" height="50px">
        <%= blog.createdBy.fullName %>
    </div>
    <h1 class="container">Comments(<%= comments.length %>)</h1>
    <% if (locals.user) { %>
        <div class="container mt-4 mb-5" style="width: 80vw;">
            <form action="/blog/comment/<%= blog._id%>" method="post">
                <input type="text" name="comment" style="width: 80%;" placeholder="Add comment">
                <button class="btn btn-primary" style="height: 70%;">comment</button>
            </form>
        </div>
    <% } %>
    <div class="container mt-4 mb-4">
        <% comments.forEach(comment => { %>
            <div class="d-flex mb-2" style="align-items: end;gap: 10px;" >
                <img src="<%= blog.createdBy.profileImageURL %>" alt="" height="50px">
                <%= blog.createdBy.fullName %>
            </div>
            <pre><%= comment.comment %></pre>
        <% }) %>
    </div>
    <%- include('./partials/script') %>
</body>
</html>